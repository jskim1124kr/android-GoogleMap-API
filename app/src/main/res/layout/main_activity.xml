<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F9D27">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="★"
            android:background="#FFE08C"
            android:textStyle="bold"
            android:onClick="regiBtnClicked"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">



        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Safe Zone"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="60dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="아동 지킴이"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/first_menu_image"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/map" />

        <Button
            android:id="@+id/first_menu_btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="지토의 집 찾기~"
            android:textAlignment="center"
            android:background="#FFE08C"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="firstBtnClicked"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/second_menu_image"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/second_menu_btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#FFE08C"
            android:text="지토야 도와줘!"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="secondBtnClicked"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/third_menu_image"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/third_menu_btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#FFE08C"
            android:text="지토의 안전수칙♥"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="thirdBtnClicked"/>
    </LinearLayout>
</LinearLayout>